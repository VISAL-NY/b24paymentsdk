<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_loading_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="@dimen/dimen_size12_5"
    android:layout_marginEnd="@dimen/dimen_size12_5">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image_loading"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/loading"
        android:layout_marginEnd="7.25dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"
        android:text="2"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/image_loading"
        android:layout_alignBottom="@+id/image_loading"
        android:layout_centerInParent="true"
        />
</RelativeLayout>